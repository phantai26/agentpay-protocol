{
  "name": "agentpay-protocol-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for AgentPay Protocol - Autonomous Agent Escrow with Multi-Chain USDC",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:arbitrum": "hardhat run scripts/deploy.js --network arbitrumSepolia",
