    "verify:arbitrum": "hardhat verify --network arbitrumSepolia",
    "verify:base": "hardhat verify --network baseSepolia"
  },
  "keywords": [
    "ethereum",
    "smart-contracts",
    "escrow",
    "ai-agents",
    "usdc",
    "multi-chain"
  ],
  "author": "AgentPay Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.4"
  }
}
